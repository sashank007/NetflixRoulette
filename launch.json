{
  "type": "APL",
  "version": "1.0",
  "theme": "dark",
  "import": [{
    "name": "alexa-layouts",
    "version": "1.0.0"
  }],
  "resources": [{
      "description": "Stock color for the light theme",
      "colors": {
        "colorTextPrimary": "#151920"
      }
    },
    {
      "description": "Stock color for the dark theme",
      "when": "${viewport.theme == 'dark'}",
      "colors": {
        "colorTextPrimary": "#f0f1ef"
      }
    },
    {
      "description": "Standard font sizes",
      "dimensions": {
        "textSizeBody": 48,
        "textSizePrimary": 27,
        "textSizeSecondary": 23,
        "textSizeSecondaryHint": 25
      }
    },
    {
      "description": "Common spacing values",
      "dimensions": {
        "spacingThin": 6,
        "spacingSmall": 12,
        "spacingMedium": 24,
        "spacingLarge": 48,
        "spacingExtraLarge": 72
      }
    },
    {
      "description": "Common margins and padding",
      "dimensions": {
        "marginTop": 40,
        "marginLeft": 60,
        "marginRight": 60,
        "marginBottom": 40
      }
    }
  ],
  "styles": {
    "textStyleBase": {
      "description": "Base font description; set color and core font family",
      "values": [{
        "color": "@colorTextPrimary",
        "fontFamily": "Amazon Ember"
      }]
    },
    "textStyleBase0": {
      "description": "Thin version of basic font",
      "extend": "textStyleBase",
      "values": {
        "fontWeight": "100"
      }
    },
    "textStyleBase1": {
      "description": "Light version of basic font",
      "extend": "textStyleBase",
      "values": {
        "fontWeight": "300"
      }
    },
    "mixinBody": {
      "values": {
        "fontSize": "@textSizeBody"
      }
    },
    "mixinPrimary": {
      "values": {
        "fontSize": "@textSizePrimary"
      }
    },
    "mixinSecondary": {
      "values": {
        "fontSize": "@textSizeSecondary"
      }
    },
    "textStylePrimary": {
      "extend": ["textStyleBase1", "mixinPrimary"]
    },
    "textStyleSecondary": {
      "extend": ["textStyleBase0", "mixinSecondary"]
    },
    "textStyleBody": {
      "extend": ["textStyleBase1", "mixinBody"]
    },
    "textStyleSecondaryHint": {
      "values": {
        "fontFamily": "Bookerly",
        "fontStyle": "italic",
        "fontSize": "@textSizeSecondaryHint",
        "color": "@colorTextPrimary"
      }
    }
  },
  "layouts": {},
  "mainTemplate": {
    "parameters": ["datasource"],
    "items": [{
        "when": "${viewport.shape == 'round'}",
        "type": "Container",
        "direction": "column",
        "items": [{
            "type": "AlexaHeader",
            "headerTitle": "Netflix Roulette",
            "fontWeight": "900"
          },
          {
            "type": "Container",
            "grow": 1,
            "alignItems": "center",
            "justifyContent": "center",
            "items": [{
                "type": "Image",
                "source": "${datasource.bodyTemplate7Data.image.sources[0].url}",
                "scale": "best-fill",
                "borderRadius": "20px",
                "width": "50vh",
                "height": "50vw",
                "align": "center"
              },
              {
                "type": "Container",
                "direction": "row",
                "items": [{
                    "type": "Container",
                    "direction": "column",
                    "alignItems": "start",
                    "justifyContent": "start",
                    "items": [{
                        "type": "Text",
                        "text": "sci-fi",
                        "fontSize": "3vw"
                      },
                      {
                        "type": "Text",
                        "text": "thriller",
                        "fontSize": "3vw"
                      },
                      {
                        "type": "Text",
                        "text": "cult",
                        "fontSize": "3vw"
                      },
                      {
                        "type": "Text",
                        "text": "fantasy",
                        "fontSize": "3vw"
                      },
                      {
                        "type": "Text",
                        "text": "docu",
                        "fontSize": "3vw"
                      }
                    ]
                  },
                  {
                    "type": "Container",
                    "direction": "column",
                    "alignItems": "end",
                    "justifyContent": "end",
                    "items": [{
                        "type": "Text",
                        "text": "horror",
                        "fontSize": "3vw"
                      },
                      {
                        "type": "Text",
                        "text": "adventure",
                        "fontSize": "3vw"
                      },
                      {
                        "type": "Text",
                        "text": "romance",
                        "fontSize": "3vw"
                      },
                      {
                        "type": "Text",
                        "text": "comedy",
                        "fontSize": "3vw"
                      },
                      {
                        "type": "Text",
                        "text": "mystery",
                        "fontSize": "3vw"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "Container",
        "width": "100vw",
        "height": "100vh",
        "items": [{
            "type": "Image",
            "source": "${datasource.bodyTemplate7Data.backgroundImage.sources[0].url}",
            "paddingTop": "60vw",
            "paddingRight": "50vw",
            "paddingLeft": "45vw",
            "position": "absolute",
            "width": "70vw",
            "opacity": "0.8",
            "height": "70vh"
          },
          {
            "type": "Container",
            "direction": "row",
            "paddingLeft": "5vw",
            "paddingRight": "5vw",
            "paddingTop": "10vw",
            "paddingBottom": "5vh",
            "alignItems": "center",
            "justifyContent": "center",
            "items": [{
                "type": "Container",
                "direction": "column",
                "paddingRight": "45vw",
                "alignItems": "start",
                "justifyContent": "start",
                "items": [{
                    "type": "TouchWrapper",
                    "item": {
                      "type": "Text",
                      "text": "scifi",
                      "fontSize": "6vw",
                      "style": "textStyleLabel",
                      "spacing": "10",
                      "opacity": "0.9"
                    },
                    "onPress": {
                      "type": "SendEvent",
                      "arguments": ["scifi", "MovieGenre"]
                    }
                  },
                  {
                    "type": "TouchWrapper",
                    "item": {
                      "type": "Text",
                      "text": "thriller",
                      "fontSize": "6vw",
                      "style": "textStyleLabel",
                      "spacing": "10",
                      "opacity": "0.9"
                    },
                    "onPress": {
                      "type": "SendEvent",
                      "arguments": ["thriller", "MovieGenre"]
                    }
                  },
                  {
                    "type": "TouchWrapper",
                    "item":

                    {
                      "type": "Text",
                      "text": "cult",
                      "fontSize": "6vw",
                      "style": "textStyleLabel",
                      "spacing": "10",
                      "opacity": "0.9"
                    },
                    "onPress": {
                      "type": "SendEvent",
                      "arguments": ["cult", "MovieGenre"]
                    }
                  },
                  {
                    "type": "TouchWrapper",
                    "item":

                    {
                      "type": "Text",
                      "text": "fantasy",
                      "fontSize": "6vw",
                      "style": "textStyleLabel",
                      "spacing": "10",
                      "opacity": "0.9"
                    },
                    "onPress": {
                      "type": "SendEvent",
                      "arguments": ["fantasy", "MovieGenre"]
                    }
                  },
                  {
                    "type": "TouchWrapper",
                    "item": {
                      "type": "Text",
                      "text": "docu",
                      "fontSize": "6vw",
                      "style": "textStyleLabel",
                      "spacing": "10",
                      "opacity": "0.9"
                    },
                    "onPress": {
                      "type": "SendEvent",
                      "arguments": ["documentary", "MovieGenre"]
                    }
                  }
                ]
              },
              {
                "type": "Container",
                "direction": "column",
                "alignItems": "end",
                "justifyContent": "end",
                "items": [{
                    "type": "TouchWrapper",
                    "item": {
                      "type": "Text",
                      "text": "horror",
                      "fontSize": "6vw",
                      "style": "textStyleLabel",
                      "spacing": "10",
                      "opacity": "0.9"
                    },
                    "onPress": {
                      "type": "SendEvent",
                      "arguments": ["horror", "MovieGenre"]
                    }
                  },
                  {
                    "type": "TouchWrapper",
                    "item": {
                      "type": "Text",
                      "text": "adventure",
                      "fontSize": "6vw",
                      "style": "textStyleLabel",
                      "spacing": "10",
                      "opacity": "0.9"
                    },
                    "onPress": {
                      "type": "SendEvent",
                      "arguments": ["adventure", "MovieGenre"]
                    }
                  },
                  {
                    "type": "TouchWrapper",
                    "item": {
                      "type": "Text",
                      "text": "romance",
                      "fontSize": "6vw",
                      "style": "textStyleLabel",
                      "spacing": "10",
                      "opacity": "0.9"
                    },
                    "onPress": {
                      "type": "SendEvent",
                      "arguments": ["romance", "MovieGenre"]
                    }
                  },
                  {
                    "type": "TouchWrapper",
                    "item": {
                      "type": "Text",
                      "text": "comedy",
                      "fontSize": "6vw",
                      "style": "textStyleLabel",
                      "spacing": "10",
                      "opacity": "0.9"
                    },
                    "onPress": {
                      "type": "SendEvent",
                      "arguments": ["comedy", "MovieGenre"]
                    }
                  },
                  {
                    "type": "TouchWrapper",
                    "item": {
                      "type": "Text",
                      "text": "mystery",
                      "fontSize": "6vw",
                      "style": "textStyleLabel",
                      "spacing": "10",
                      "opacity": "0.9"
                    },
                    "onPress": {
                      "type": "SendEvent",
                      "arguments": ["comedy", "MovieGenre"]
                    }
                  }

                ]
              }
            ]
          }
        ]
      }

    ]
  }
}